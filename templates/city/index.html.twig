{% extends 'base.html.twig' %}

{% block title %}Listes des villes disponibles{% endblock %}

{% block body %}
<div class='container'>
    <h1>Villes</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Frais de livraison</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.name }}</td>
                <td>{{ city.shippingCost }}</td>
                <td>
                    <a href="{{ path('app_city_show', {'id': city.id}) }}">Voir</a>
                    <a href="{{ path('app_city_edit', {'id': city.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_city_new') }}">Ajouter une ville</a>
</div>
{% endblock %}
