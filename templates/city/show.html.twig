{% extends 'base.html.twig' %}

{% block title %}Voir la ville sélectionnée{% endblock %}

{% block body %}
<div class='container'>
    <h1>Voir la ville sélectionnée </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id :</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Ville : </th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Frais de livraison : </th>
                <td>{{ city.shippingCost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_city_index') }}">Retour à la liste des villes</a>

    <a href="{{ path('app_city_edit', {'id': city.id}) }}">Modifier</a>

    {{ include('city/_delete_form.html.twig') }}

{% endblock %}
