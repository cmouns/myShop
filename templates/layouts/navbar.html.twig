{# Navbar principale #}
<nav class="navbar navbar-expand-lg bg-black">
  <div class="container">
    <a class="navbar-brand" href="/">
      <img src="/uploads/images/logo.png" alt="AsiaSHOP" style="height:40px; margin-right:8px;">
      <span class="text-logo">ShopTaFigurine</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll"
      aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarScroll">

      {# Barre de recherche #}
      <form data-turbo='false' method="get" action="{{ path('app_search')}}" class="d-flex mx-auto" style="width:100%; height:50px; border:solid 2px; border-radius:10px;" role="search">
        <input name="word" class="form-control me-2" type="search" placeholder="Rechercher un produit" aria-label="Search">
        <button style="height:47px; width:40px;" class="btn-search" type="submit">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="black" viewBox="0 0 16 16">
            <circle cx="7" cy="7" r="6" stroke="black" stroke-width="2"/>
            <line x1="11" y1="11" x2="16" y2="16" stroke="black" stroke-width="2"/>
          </svg>
        </button>
      </form>

      <ul class="navbar-nav ms-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height:100px;">
        {# Menu utilisateur #}
        <li class="nav-item dropdown" style="position:relative;">
          <svg class="bi bi-person personIcon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
          </svg>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            {% if app.user %}
              <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
            {% else %}
              <li><a class="dropdown-item" href="{{ path('app_login') }}">Connexion</a></li>
              <li><a class="dropdown-item" href="{{ path('app_register') }}">Inscription</a></li>
            {% endif %}
          </ul>
        </li>

        {# Panier #}
        <li class="nav-item">
          <a style="color:black;" href="{{ path('app_cart') }}">
            <svg class="cartIcon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
              <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
            </svg>
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

{# Sous-navbar pour les catégories avec mega menu #}
<nav class="navbar navbar-expand-lg navbar-light bg-secondary-subtle border-top">
  <div class="container">
    <div class="collapse navbar-collapse show" id="navbarCategories">
      <ul class="navbar-nav mx-auto">

        {# Menu admin #}
        {% if is_granted("ROLE_ADMIN") %}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Admin</a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="{{ path('app_category') }}">Catégories</a></li>
              <li><a class="dropdown-item" href="{{ path('app_category_add') }}">Ajouter une catégorie</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="{{ path('app_sub_category_index') }}">Sous-Catégorie</a></li>
              <li><a class="dropdown-item" href="{{ path('app_sub_category_new') }}">Ajouter une sous-catégorie</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="{{ path('app_product_index') }}">Produit</a></li>
              <li><a class="dropdown-item" href="{{ path('app_product_new') }}">Ajouter un produit</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="{{ path('app_users') }}">Utilisateurs</a></li>
            </ul>
          </li>
        {% endif %}

        {# Menu catégories publiques #}
{% for category in categoriesWithData %}
  <li class="nav-item dropdown position-static">
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
      {{ category.name }}
    </a>

    {% if category.subCategories is not empty %}
      <div class="dropdown-menu mega-menu p-4">
        <div class="row">

          {# Colonne sous-catégories #}
          <div class="col-md-4">
            <h6 class="fw-bold">{{ category.name }}</h6>
            <ul class="list-unstyled">
              {% for subCategory in category.subCategories %}
                {% if subCategory.slug is not empty %}
                  <li>
                    <a class="dropdown-item" href="{{ path('app_home_product_filter', {
                      'category_slug': category.slug,
                      'sub_category_slug': subCategory.slug
                    }) }}">
                      {{ subCategory.name }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>

          {# Produit mis en avant automatiquement #}
          <div class="col-md-8 text-center">
            {% if category.product %}
              <a href="{{ path('app_home_product_show', {
                sub_category_slug: category.product.sub_category_slug,
                id: category.product.id,
                slug: category.product.slug
              }) }}">
                <img src="{{ asset('uploads/images/' ~ category.product.image) }}"
                     alt="Article à la une"
                     class="img-fluid rounded"
                     style="max-width: 180px; max-height: 180px; object-fit: contain;">
                {% set subCategoryName = '' %}
                {% for subCategory in category.subCategories %}
                  {% if subCategory.slug == category.product.sub_category_slug %}
                    {% set subCategoryName = subCategory.name %}
                  {% endif %}
                {% endfor %}
                <p class="mt-2">{{ subCategoryName }}</p>
              </a>
            {% else %}
              <img src="https://via.placeholder.com/250" class="img-fluid rounded">
              <p class="mt-2">Bientôt disponible</p>
            {% endif %}
          </div>

        </div>
      </div>
    {% endif %}
  </li>
{% endfor %}


      </ul>
    </div>
  </div>
</nav>

<style>
  /* Mega-menu large */
  .dropdown-menu.mega-menu {
    width: 800px;
    left: 0;
    right: 0;
    margin: auto;
  }

  /* Pour activer l'ouverture au hover */
  @media (min-width: 992px) {
    .nav-item.dropdown:hover > .dropdown-menu {
      display: block;
    }
  }

  .dropdown-menu.mega-menu img {
    max-width: 180px;
    max-height: 180px;
    object-fit: contain;
  }

  .dropdown-menu.mega-menu a,
  .dropdown-menu.mega-menu a:visited,
  .dropdown-menu.mega-menu a:active {
      background: none !important;
      text-decoration: none !important;
      color: inherit !important;
      box-shadow: none !important;
  }
</style>
{# Fin du fichier navbar.html.twig #}