<form method="post" action="{{ path('app_sub_category_delete', {
        'category_slug': sub_category.category.slug,
        'sub_category_slug': sub_category.slug
    }) }}"
    onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette sous-catégorie ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sub_category.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
