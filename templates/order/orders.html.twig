{% extends 'base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block body %}
<style>
    body {
        background: #f8fafc;
    }
    .order-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 2px 12px rgba(0,0,0,0.07);
        padding: 2.2rem 1.5rem;
        margin-bottom: 2.5rem;
        border: 1px solid #e3e6ea;
    }
    .order-header {
        font-size: 1.15rem;
        font-weight: 700;
        color: #222;
        margin-bottom: 1.2rem;
        letter-spacing: 0.5px;
        border-bottom: 1px solid #e3e6ea;
        padding-bottom: 0.7rem;
    }
    .list-group-item {
        background: none;
        border: none;
        padding-left: 0;
        padding-right: 0;
        font-size: 1rem;
        color: #444;
    }
    .order-label {
        color: #888;
        font-weight: 500;
        margin-right: 4px;
    }
    .order-value {
        color: #222;
        font-weight: 400;
    }
    .delivery-fee {
        color: #555;
        font-weight: 500;
    }
    .order-date {
        font-size: 0.97rem;
        color: #aaa;
        font-weight: 500;
    }
    .product-table th {
        background: #f6f8fa;
        font-weight: 600;
        color: #222;
        border-bottom: 2px solid #e3e6ea;
        font-size: 1rem;
    }
    .product-table td {
        vertical-align: middle;
        font-size: 0.98rem;
        color: #333;
        background: #fff;
    }
    .order-total {
        font-size: 1.13rem;
        font-weight: 700;
        color: #0d6efd;
        margin-top: 1.2rem;
        letter-spacing: 0.5px;
    }
    .order-actions .btn {
        min-width: 140px;
        font-size: 0.98rem;
        font-weight: 600;
        margin: 0.5rem 0.25rem;
        border-radius: 0.6rem;
        box-shadow: 0 2px 8px rgba(40, 40, 40, 0.07);
        transition: background 0.2s, color 0.2s;
    }
    .order-actions .btn-outline-primary {
        border-color: #0d6efd;
        color: #0d6efd;
        background: #fff;
    }
    .order-actions .btn-outline-primary:hover {
        background: #0d6efd;
        color: #fff;
    }
    .order-actions .btn-danger {
        background: #e74c3c;
        border: none;
        color: #fff;
    }
    .order-actions .btn-danger:hover {
        background: #c0392b;
    }
    .order-card:not(:last-child) {
        margin-bottom: 2.5rem;
    }
    .table-responsive {
        border-radius: 0.7rem;
        overflow: hidden;
        margin-bottom: 1rem;
    }
</style>
<div class="container py-4">
    <h1 class="mb-4 text-center fw-bold" style="color:#222;">Liste des commandes clients</h1>
    {{ include ('layouts/_flash_message.html.twig') }}
    {% for order in orders %}
        <div class="order-card">
            <div class="order-header">
                <i class="bi bi-person-circle me-2"></i>
                Commande n°{{ order.id }} &mdash; {{ order.firstName }} {{ order.lastName }}
                <br>
                <div class="text-center">
                {% if order.isCompleted == true %}
                    <span class="text-success">Commande livrée le {{ order.createdAt|format_date('long', '', null, '', 'fr') }}</span>
                {% else %}
                    <span class="text-danger">Commande non livrée</span>
                {% endif %}
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <ul class="list-group list-group-flush mb-2">
                        <li class="list-group-item">
                            <span class="order-label">Téléphone :</span>
                            <span class="order-value">{{ order.phone }}</span>
                        </li>
                        <li class="list-group-item">
                            <span class="order-label">Adresse :</span>
                            <span class="order-value">{{ order.adress }}</span>
                        </li>
                        <li class="list-group-item">
                            <span class="order-label">Ville :</span>
                            <span class="order-value">{{ order.city.name }}</span>
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="list-group list-group-flush mb-2">
                        <li class="list-group-item delivery-fee">
                            <span class="order-label">Frais de livraison :</span>
                            <span class="order-value">{{ order.city.shippingCost }} €</span>
                        </li>
                        <li class="list-group-item order-date">
                            <span class="order-label">Date :</span>
                            <span class="order-value">{{ order.createdAt|format_date('long', '', null, '', 'fr') }}</span>
                        </li>
                    </ul>
                </div>
            </div>
            <h5 class="mb-3" style="color:#222;">Produits commandés :</h5>
            <div class="table-responsive">
                <table class="table product-table align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for product in order.orderProducts %}
                            <tr>
                                <td>
                                    <img style="width: 70px; border-radius: 0.5rem;" src="{{ asset('uploads/images/'~product.product.image) }}">
                                </td>
                                <td>{{ product.product.name }}</td>
                                <td>{{ product.product.price }} €</td>
                                <td>{{ product.quantity }}</td>
                                <td class="fw-bold">{{ product.product.price * product.quantity }} €</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="order-total">
                Total à payer : {{ order.totalPrice }} €
            </div>
            <a href="{{ path('app_bill', {'id': order.id}) }}" class="btn btn-outline-primary"><i class="bi bi-check2-circle me-1"></i>Imprimer la facture</a>

            <div class="order-actions mt-3">
            {% if order.isCompleted != true %}
                <a href="{{ path('app_orders_is-completed-update', {'id': order.id}) }}" class="btn btn-outline-primary"><i class="bi bi-check2-circle me-1"></i>Marquer comme livrée</a>
            {% endif %}
                <a onclick ="return confirm('Voulez vraiment supprimer cette commande ?')" href="{{ path('app_orders_remove', {'id': order.id}) }}" class="btn btn-danger"><i class="bi bi-trash me-1"></i>Supprimer la commande</a>
            </div>
        </div>
    {% endfor %}
    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(ordersPagination, 'layouts/_paginator.html.twig') }}
    </div>
</div>
{% endblock %}